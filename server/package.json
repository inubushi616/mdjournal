    "remark-parse": "^11.0.0",
    "simple-git": "^3.22.0",
    "unified": "^11.0.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
