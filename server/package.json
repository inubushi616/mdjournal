{
  "name": "mdjournal",
  "version": "1.0.10",
  "description": "Markdown日報を視覚的に管理するダッシュボードアプリケーション",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mdjournal": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:watch": "tsx watch src/cli.ts",
    "build": "tsc",
    "build:full": "tsc && npm run copy:client",
    "copy:client": "cp -r ../client/dist ./dist/client",
    "start": "node dist/cli.js",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "eslint src",
    "prepublishOnly": "npm run build:full"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "simple-git": "^3.22.0",
    "unified": "^11.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.33.1"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "daily-report",
    "journal",
    "dashboard",
    "markdown",
    "todo",
    "timeline",
    "time-tracking"
  ],
  "author": "foo-ogawa",
  "license": "MIT",
  "homepage": "https://github.com/foo-ogawa/mdjournal#readme",
  "bugs": {
    "url": "https://github.com/foo-ogawa/mdjournal/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foo-ogawa/mdjournal.git"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
